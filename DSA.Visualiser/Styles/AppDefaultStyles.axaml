<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}">
            <Button HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" Classes="buttonstackpanel">
                    <Label Classes="icon" Content="&#xE2C2;"></Label>
                    <Label Classes="GugiFont" Content="Home" FontFamily="{DynamicResource Gugi}"></Label>
                </StackPanel>
            </Button>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->

    <Style Selector="Button Label.icon">
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"></Setter>
        <Setter Property="Padding" Value="0 7 0 15"></Setter>

    </Style>

    <Style Selector="Button">
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="Padding" Value="10 12 10 5"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"></Setter>
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">

        <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundHover}"></Setter>
        <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundButtonHover}"></Setter>

    </Style>
</Styles>